<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/whitebox"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:src="@drawable/back_icon"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"/>


            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/leferibasebold"
                android:text="가게 등록"
                android:textColor="#000000"
                android:textSize="26dp" />

        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="#EE8282" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/shadow_box"
            android:elevation="10dp">

            <TextView
                android:id="@+id/signup_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가게 등록"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:fontFamily="@font/leferibaseregular"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <View
                android:id="@+id/line_signup"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="#EE8282" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="사업자 번호"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/business_number"
                    android:layout_width="180dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="25dp"
                    android:background="@drawable/input_box"
                    android:textColor="@color/black"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_height="25dp"
                    android:background="@drawable/login_box"
                    android:layout_width="50dp"
                    android:text="인증"
                    android:textColor="@color/black"
                    android:fontFamily="@font/leferipointwhite"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="가게 이름"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    />

                <EditText
                    android:id="@+id/market_name"
                    android:layout_width="230dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="25dp"
                    android:background="@drawable/input_box"
                    android:textColor="@color/black"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="전화번호"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    />

                <EditText
                    android:id="@+id/market_phone_number"
                    android:layout_width="230dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="25dp"
                    android:background="@drawable/input_box"
                    android:textColor="@color/black"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    />

                <EditText
                    android:id="@+id/market_address"
                    android:layout_width="230dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="25dp"
                    android:background="@drawable/input_box"
                    android:textColor="@color/black"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mustchoice_text"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="사업장 규모"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    />
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:checkedButton="@+id/employee_radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">
                    <RadioButton
                        android:id="@+id/underfive_radiobutton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="5인 미만"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:buttonTint="@color/hotpink"
                        />

                    <RadioButton
                        android:id="@+id/abovefive_radiobutton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="5인 이상"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:buttonTint="@color/hotpink"/>


                </RadioGroup>
            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_height="25dp"
                    android:background="@drawable/login_box"
                    android:layout_width="50dp"
                    android:text="확인"
                    android:textColor="@color/black"
                    android:fontFamily="@font/leferipointwhite"
                    android:layout_marginRight="5dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_height="25dp"
                    android:background="@drawable/cancel_box"
                    android:layout_width="50dp"
                    android:text="취소"
                    android:textColor="@color/black"
                    android:fontFamily="@font/leferipointwhite"
                    android:layout_marginLeft="5dp"/>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <ImageButton
            android:id="@+id/bell_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/bell_icon"
            android:contentDescription="bell" />

        <ImageButton
            android:id="@+id/home_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/home_icon"
            android:contentDescription="home" />

        <ImageButton
            android:id="@+id/mypage_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/menu_icon"
            android:contentDescription="menu" />

    </LinearLayout>

</LinearLayout>