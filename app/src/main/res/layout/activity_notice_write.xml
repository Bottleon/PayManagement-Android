<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NoticePostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/whitebox"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:src="@drawable/back_icon"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"/>


            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/leferibasebold"
                android:text="공지사항"
                android:textColor="#000000"
                android:textSize="26dp" />

        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="#EE8282" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shadow_box"
            android:elevation="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/title_notice_write"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/leferibaseregular"
                    android:hint="제목 입력"
                    android:textColorHint="@color/black"
                    android:textSize="25dp" />

            </LinearLayout>


            <View
                android:id="@+id/line_signup"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="#EE8282" />


            <EditText
                android:id="@+id/context_notice_write"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="300dp"
                android:hint="내용 입력"
                android:textColorHint="@color/black"
                android:fontFamily="@font/leferibaseregular"
                android:textSize="20dp">

            </EditText>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/notice_send"
                    android:layout_height="25dp"
                    android:background="@drawable/login_box"
                    android:layout_width="50dp"
                    android:text="확인"
                    android:textColor="@color/black"
                    android:fontFamily="@font/leferipointwhite"
                    android:layout_marginRight="5dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_height="25dp"
                    android:background="@drawable/cancel_box"
                    android:layout_width="50dp"
                    android:text="취소"
                    android:textColor="@color/black"
                    android:fontFamily="@font/leferipointwhite"
                    android:layout_marginLeft="5dp"/>


            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <ImageButton
            android:id="@+id/bell_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/bell_icon"
            android:contentDescription="bell" />

        <ImageButton
            android:id="@+id/home_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/home_icon"
            android:contentDescription="home" />

        <ImageButton
            android:id="@+id/mypage_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/menu_icon"
            android:contentDescription="menu" />

    </LinearLayout>

</LinearLayout>