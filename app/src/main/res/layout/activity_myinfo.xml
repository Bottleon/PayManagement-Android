<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MyinfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/whitebox"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:src="@drawable/back_icon"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"/>


            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/leferibasebold"
                android:text="마이 페이지"
                android:textColor="#000000"
                android:textSize="26dp" />

        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="#EE8282" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/shadow"
            android:elevation="10dp">

            <TextView
                android:id="@+id/signup_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내 정보"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:fontFamily="@font/leferibaseregular"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <View
                android:id="@+id/line_signup"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="#EE8282" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/myinfo_icon"
                    android:layout_marginStart="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="내 이름"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/leferibaseregular"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="right"/>

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="가가"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/leferipointwhite"
                        android:layout_marginStart="20dp"
                        android:gravity="right"/>

                    <TextView
                        android:id="@+id/phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="내 연락처"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/leferibaseregular"
                        android:layout_marginStart="20dp"
                        android:gravity="right"/>

                    <TextView
                        android:id="@+id/user_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="01011111112"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/leferipointwhite"
                        android:layout_marginStart="20dp"
                        android:gravity="right"/>


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/modify_button"
                android:layout_height="80dp"
                android:layout_width="300dp"
                android:background="@drawable/shadow"
                android:text="회원정보 수정"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/leferibaseregular"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                />

            <Button
                android:id="@+id/logout_button"
                android:layout_height="80dp"
                android:layout_width="300dp"
                android:background="@drawable/shadow"
                android:text="로그아웃"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/leferibaseregular"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                />

            <Button
                android:id="@+id/delete_button"
                android:layout_height="80dp"
                android:layout_width="300dp"
                android:background="@drawable/shadow"
                android:text="탈퇴"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/leferibaseregular"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>



    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <ImageButton
            android:id="@+id/bell_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/bell_icon"
            android:contentDescription="bell" />

        <ImageButton
            android:id="@+id/home_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/home_icon"
            android:contentDescription="home" />

        <ImageButton
            android:id="@+id/mypage_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/menu_icon"
            android:contentDescription="menu" />

    </LinearLayout>


</LinearLayout>