<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/whitebox"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:src="@drawable/back_icon"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"/>


            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/leferibasebold"
                android:text="@string/title_signup"
                android:textColor="#000000"
                android:textSize="26dp" />

        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="#EE8282" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/shadow_box"
            android:elevation="10dp">

            <TextView
                android:id="@+id/signup_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_signup"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:fontFamily="@font/leferibaseregular"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <View
                android:id="@+id/line_signup"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="#EE8282" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mustchoice_text"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="필수선택 "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="5dp"
                    />
                <RadioGroup
                    android:id="@+id/auth_radioGroup"
                    android:checkedButton="@+id/employee_radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">
                    <RadioButton
                        android:id="@+id/employee_radiobutton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="근로자"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:buttonTint="@color/hotpink"
                        />

                    <RadioButton
                        android:id="@+id/owner_radiobutton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="고용주"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:buttonTint="@color/hotpink"/>

                    
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="이름 "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    />

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="230dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_box"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="휴대폰(ID) "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    />

                <EditText
                    android:id="@+id/user_id"
                    android:layout_width="180dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="25dp"
                    android:background="@drawable/input_box"
                    android:textColor="@color/black"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/id_certification_send_button"
                    android:layout_height="25dp"
                    android:background="@drawable/login_box"
                    android:layout_width="50dp"
                    android:text="인증"
                    android:textColor="@color/black"
                    android:fontFamily="@font/leferipointwhite"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="인증번호 "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    />

                <EditText
                    android:id="@+id/id_certification_number"
                    android:layout_width="180dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="25dp"
                    android:background="@drawable/input_box"
                    android:textColor="@color/black"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/id_varification_button"
                    android:layout_height="25dp"
                    android:background="@drawable/login_box"
                    android:layout_width="50dp"
                    android:text="확인"
                    android:textColor="@color/black"
                    android:fontFamily="@font/leferipointwhite"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    />

                <EditText
                    android:id="@+id/user_password"
                    android:inputType="textPassword"
                    android:layout_width="230dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_box"
                    android:textColor="@color/black"
                    />

            </LinearLayout>


            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="주민번호 "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    />

                <EditText
                    android:layout_width="230dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_box"
                    android:textColor="@color/black"
                    />

            </LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gender_choice_text"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="성별 "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="5dp"
                    />
                <RadioGroup
                    android:id="@+id/gender_radioGroup"
                    android:checkedButton="@+id/male_radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    >
                    <RadioButton
                        android:id="@+id/male_radiobutton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="남성"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:buttonTint="@color/hotpink"
                        />

                    <RadioButton
                        android:id="@+id/female_radiobutton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="여성"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:buttonTint="@color/hotpink"/>
                </RadioGroup>
            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="주소 "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    />

                <EditText
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_box"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    />

            </LinearLayout>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signup_button"
                    android:layout_height="25dp"
                    android:background="@drawable/login_box"
                    android:layout_width="50dp"
                    android:text="확인"
                    android:textColor="@color/black"
                    android:fontFamily="@font/leferipointwhite"
                    android:layout_marginRight="5dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancel_button"
                    android:layout_height="25dp"
                    android:background="@drawable/cancel_box"
                    android:layout_width="50dp"
                    android:text="취소"
                    android:textColor="@color/black"
                    android:fontFamily="@font/leferipointwhite"
                    android:layout_marginLeft="5dp"/>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <ImageButton
            android:id="@+id/bell_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/bell_icon"
            android:contentDescription="bell" />

        <ImageButton
            android:id="@+id/home_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/home_icon"
            android:contentDescription="home" />

        <ImageButton
            android:id="@+id/mypage_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/menu_icon"
            android:contentDescription="menu" />

    </LinearLayout>

</LinearLayout>