<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MarketInfoActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/whitebox"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:src="@drawable/back_icon"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"/>


            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/leferibasebold"
                android:text="가게 정보"
                android:textColor="#000000"
                android:textSize="26dp" />

        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="#EE8282" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="700dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/shadow_box"
            android:elevation="10dp">

            <TextView
                android:id="@+id/signup_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가게 정보"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:fontFamily="@font/leferibaseregular"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <View
                android:id="@+id/line_signup"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="#EE8282" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/store"
                android:layout_marginStart="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/market_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가게 이름"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/leferibaseregular"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"/>

                <TextView
                    android:id="@+id/market_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/leferipointwhite"
                    android:layout_marginStart="20dp"
                    android:gravity="right"/>

                <TextView
                    android:id="@+id/owner_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="고용주 이름"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/leferibaseregular"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"/>

                <TextView
                    android:id="@+id/owner_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나나"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/leferipointwhite"
                    android:layout_marginStart="20dp"
                    android:gravity="right"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가게 주소"
                android:textColor="@color/black"
                android:fontFamily="@font/leferibaseregular"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/market_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="대구광역시 달서구"
                android:textColor="@color/black"
                android:fontFamily="@font/leferipointwhite"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가게 코드"
                android:textColor="@color/black"
                android:fontFamily="@font/leferibaseregular"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/market_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12345"
                android:textColor="@color/black"
                android:fontFamily="@font/leferipointwhite"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="직원 수"
                android:textColor="@color/black"
                android:fontFamily="@font/leferibaseregular"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/market_staff_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:fontFamily="@font/leferipointwhite"
                android:textSize="15dp"
                />
        </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <ImageButton
            android:id="@+id/bell_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/bell_icon"
            android:contentDescription="bell" />

        <ImageButton
            android:id="@+id/home_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/home_icon"
            android:contentDescription="home" />

        <ImageButton
            android:id="@+id/mypage_imagebutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/menu_icon"
            android:contentDescription="menu" />

    </LinearLayout>

</LinearLayout>